<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context="rimp.rild.com.android.colorsettest.SubActivity">

    <TextView
        android:id="@+id/current_color_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="現在の色は ... 色です" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select your color" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <include layout="@layout/button_light" />

    <include layout="@layout/button_dark" />

    <include layout="@layout/button_vivid" />

    <Button
        android:id="@+id/black_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/bg_black"
        android:text="black"
        android:textColor="@color/inverse_text_color"
        android:textStyle="bold" />

    <Button
        android:id="@+id/blue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/bg_blue"
        android:text="blue"
        android:textColor="@color/inverse_text_color"
        android:textStyle="bold" />

    <Button
        android:id="@+id/red_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/bg_red"
        android:text="red"
        android:textColor="@color/inverse_text_color"
        android:textStyle="bold" />
</LinearLayout>
